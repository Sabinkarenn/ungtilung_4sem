---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Heading from "../components/Heading.astro";
import heroimage2 from "../assets/images/heroimage2.webp";
import image6 from "../assets/images/image6.webp";
import Slider2 from "../components/Slider2.astro";
---

<MainLayout>
  <!-- Hero section -->

  <section
    class="w-full bg-gradient-to-b from-[#FFD699] to-[#FBF5EC] py-20 px-6"
  >
    <div
      class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
    >
      <!-- Headline & Tagline -->
      <div class="flex flex-col gap-2">
        <Heading htmlheading="h1" size="xlarge">Vores tilbud</Heading>

        <p class="max-w-xl">
          Dit digitale fællesskab, der hjælper dig skabe det liv, du ønsker —
          alene og sammen med andre
        </p>

        <div class="mt-4">
          <Button variant="secondary" size="medium"> Chatten </Button>
        </div>
      </div>

      <!-- Hero image -->
      <div class="relative w-full max-w-[370px] mx-auto">
        <!-- Orange outline -->
        <div
          class="absolute right-0 top-10 h-[85%] w-[90%] border-3 border-orange60
               rounded-3xl border-l-0 border-t-0"
        >
        </div>

        <div class="relative rounded-3xl p-4">
          <Image
            src={heroimage2}
            alt="3 happy people"
            class="rounded-3xl w-full h-auto object-cover"
          />
        </div>
      </div>
    </div>

    <!-- chattens åbningstider section -->
    <section class="mt-20 grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- image -->
      <div class="relative w-full max-w-[380px] mx-auto">
        <!-- Orange outline -->
        <div
          class="absolute -top-6 right-[-25px]
           h-[92%] w-[95%]
           border-2 border-orange60
           rounded-3xl
           border-l-0 border-t-0"
        >
        </div>

        <!-- Image container -->
        <div class="relative rounded-3xl overflow-hidden shadow-sm">
          <Image
            src={image6}
            alt="2 happy people"
            class="rounded-3xl w-full h-auto object-cover"
          />
        </div>
      </div>

      <!-- Boks -->
      <aside class="w-full max-w-sm bg-green60 rounded-2xl p-8">
        <Heading
          htmlheading="h2"
          size="xsmall"
          stylingclasses="text-primaryblue60"
        >
          Chattens åbningstider
        </Heading>

        <ul class="space-y-3 text-white">
          <li class="flex justify-between items-center">
            <span class="font-bold">Mandag</span>
            <span class="text-base">16.00 – 20.00</span>
          </li>

          <li class="flex justify-between items-center">
            <span class="font-bold">Tirsdag</span>
            <span class="text-base">17.00 – 19.00</span>
          </li>

          <li class="flex justify-between items-center">
            <span class="font-bold">Onsdag</span>
            <span class="text-base">17.00 – 19.00</span>
          </li>

          <li class="flex justify-between items-center">
            <span class="font-bold">Torsdag</span>
            <span class="text-base">17.00 – 19.00</span>
          </li>

          <li class="flex justify-between items-center">
            <span class="font-bold">Fredag</span>
            <span class="text-base">Lukket</span>
          </li>

          <li class="flex justify-between items-center">
            <span class="font-bold">Lørdag</span>
            <span class="text-base">Lukket</span>
          </li>

          <li class="flex justify-between items-center">
            <span class="font-bold">Søndag</span>
            <span class="text-base">16.00 – 20.00</span>
          </li>
        </ul>
      </aside>
    </section>
  </section>
  <!-- Citat slider section-->
  <section class="mt-20">
    <Slider2 />
  </section>
</MainLayout>
