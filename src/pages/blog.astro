    </div>
  </section>
  <!-- Citat slider sektion-->
  <section class="mt-40">
    <Slider />
  </section>

  <!-- Form sektion-->
  <section
    class="mx-auto max-w-6xl px-6 mt-20 lg:mt-40 mb-35 grid grid-cols-1 lg:grid-cols-2 gap-10"
  >
    <div><Form /></div>

    <!-- Billede -->
    <div
      class="relative w-full max-w-[280px] sm:max-w-[330px] lg:max-w-[370px] mx-auto"
    >
      <!-- Orange border -->
      <div
        class="absolute right-0 top-6 sm:top-8 lg:top-10
       h-[85%] w-[90%]
       border-3 border-orange60
       rounded-2xl border-l-0 border-t-0"
      >
