---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Heading from "../components/Heading.astro";
---

<header class="w-full bg-beige border-b-2 border-primaryblue60">
  <nav
    class="max-w-7xl mx-auto px-4 relative py-4"
    role="navigation"
    aria-label="Hovednavigation"
  >
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-8">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2" aria-label="Til forsiden">
          <img src="/ungtilunglogo.svg" alt="UngTilUng logo" class="h-10" />
        </a>

        <!-- Desktop menu (venstre side pÃ¥ md+) -->
        <ul class="hidden md:flex items-center gap-8 text-primaryblue100">
          <li><a href="/" class="hover:text-primaryblue60">Forside</a></li>
          <li>
            <a href="/vorestilbud" class="hover:text-primaryblue60"
              >Vores tilbud</a
            >
          </li>
          <li><a href="/blog" class="hover:text-primaryblue60">Blog</a></li>
          <li>
            <a href="/frivillig" class="hover:text-primaryblue60">Frivillig</a>
          </li>
          <li><a href="/omos" class="hover:text-primaryblue60">Om os</a></li>
        </ul>
      </div>

      <!--CTA (desktop) + burger (mobil) -->
      <div class="flex items-center gap-4">
        <div class="hidden md:block">
          <Button variant="primary" size="small">
            Opret brugere / Login
          </Button>
        </div>

        <!-- Mobile burger -->
        <div class="md:hidden">
          <input
            id="menu-toggle"
            type="checkbox"
            class="sr-only peer"
            aria-controls="mobile-menu"
          />

          <label
            for="menu-toggle"
            id="menu-toggle-label"
            class="cursor-pointer p-2 inline-flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-darkblue"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>

          <!-- Mobile dropdown -->
          <div
            id="mobile-menu"
            class="absolute top-full w-screen bg-beige origin-top transform
                   scale-y-0 opacity-0 pointer-events-none transition-all duration-200
                   max-h-[100vh] overflow-y-auto
                   peer-checked:scale-y-100 peer-checked:opacity-100 peer-checked:pointer-events-auto"
            style="transform-origin: top;"
          >
            <div class="mx-4 my-4 bg-beige p-6 rounded-xl">
              <div class="flex items-center justify-between mb-10">
                <Button variant="primary" size="small">
                  Opret bruger / login
                </Button>

                <label for="menu-toggle" class="cursor-pointer">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-8 w-8 text-primaryblue60"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </label>
              </div>

              <ul
                class="flex flex-col gap-8 text-primaryblue100 text-2xl font-normal"
              >
                <li>
                  <a href="/" class="hover:text-primaryblue60">Forside</a>
                </li>
                <li>
                  <a href="/vorestilbud" class="hover:text-primaryblue60"
                    >Vores tilbud</a
                  >
                </li>
                <li>
                  <a href="/blog" class="hover:text-primaryblue60">Blog</a>
                </li>
                <li>
                  <a href="/frivillig" class="hover:text-primaryblue60"
                    >Frivillig</a
                  >
                </li>
                <li>
                  <a href="/omos" class="hover:text-primaryblue60">Om os</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
