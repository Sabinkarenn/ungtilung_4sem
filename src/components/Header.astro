---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Heading from "../components/Heading.astro";
---

<header class="w-full bg-beige border-b-2 border-primaryblue60">
  <nav
    class="max-w-7xl mx-auto px-4 relative py-4"
    role="navigation"
    aria-label="Hovednavigation"
  >
    <div class="flex items-center justify-between">
      <!-- LEFT: logo + desktop links -->
      <div class="flex items-center gap-8">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2" aria-label="Til forsiden">
          <img src="/ungtilunglogo.svg" alt="UngTilUng logo" class="h-10" />
        </a>

        <!-- Desktop menu (venstre side på md+) -->
        <ul class="hidden md:flex items-center gap-8 text-primaryblue100">
          <li><a href="/" class="hover:text-primaryblue60">Forside</a></li>
          <li>
            <a href="/vorestilbud" class="hover:text-primaryblue60"
              >Vores tilbud</a
            >
          </li>
          <li><a href="/blog" class="hover:text-primaryblue60">Blog</a></li>
          <li>
            <a href="/frivillig" class="hover:text-primaryblue60">Frivillig</a>
          </li>
          <li><a href="/omos" class="hover:text-primaryblue60">Om os</a></li>
        </ul>
      </div>

      <!-- RIGHT: CTA (desktop) + burger (mobil) -->
      <div class="flex items-center gap-4">
        <!-- Desktop CTA -->
        <div class="hidden md:block">
          <Button variant="primary" size="medium"> Læs mere </Button>
        </div>

        <!-- Mobile burger (vises kun md:hidden) -->
        <div class="md:hidden relative">
          <input
            id="menu-toggle"
            type="checkbox"
            class="sr-only peer"
            aria-controls="mobile-menu"
          />

          <!-- Burger-ikon (placeret til højre via flex på parent) -->
          <label
            for="menu-toggle"
            id="menu-toggle-label"
            class="cursor-pointer p-2 inline-flex items-center justify-center"
            aria-hidden="false"
            aria-expanded="false"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-darkblue"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>

          <!-- Mobile dropdown (fylder under nav) -->
          <div
            id="mobile-menu"
            class="absolute right-0 left-0 top-full bg-beige border-t-2 border-primaryblue60 z-40 origin-top transform scale-y-0 opacity-0 pointer-events-none transition-all duration-200 peer-checked:scale-y-100 peer-checked:opacity-100 peer-checked:pointer-events-auto"
            style="transform-origin: top;"
            aria-hidden="true"
          >
            <ul class="flex flex-col gap-5 py-8 px-6 text-darkblue">
              <li><a href="/" class="hover:text-primaryblue60">Forside</a></li>
              <li>
                <a href="/vorestilbud" class="hover:text-primaryblue60"
                  >Vores tilbud</a
                >
              </li>
              <li><a href="/blog" class="hover:text-primaryblue60">Blog</a></li>
              <li>
                <a href="/frivillig" class="hover:text-primaryblue60"
                  >Frivillig</a
                >
              </li>
              <li>
                <a href="/omos" class="hover:text-primaryblue60">Om os</a>
              </li>

              <div class="pt-4">
                <Link href="" variant="primary" size="medium"
                  >Opret bruger / Login</Link
                >
              </div>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
