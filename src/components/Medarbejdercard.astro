---
// MedarbejderCard.astro
const {
  url = "/singleview",
  image = "",
  imageAlt = "",
  name = "",
  role = "",
  bio = "",
  email = "",
  linkedin = "#",
} = Astro.props;
import Heading from "../components/Heading.astro";
---

<a
  href={url}
  class="block w-full no-underline text-inherit"
  aria-label={`Gå til ${name}`}
>
  <div class="w-full hover:scale-[1.02] transition-transform duration-300">
    <!-- Outer card -->
    <div
      class="rounded-xl border-2 border-orange60 bg-beige p-4 gap-4 relative overflow-hidden h-full flex flex-col"
    >
      <!-- Image wrapper -->
      <div class="w-full flex justify-center">
        <div
          class="w-full max-w-[300px] rounded-lg border-2 border-orange60 overflow-hidden"
        >
          <img
            src={image}
            alt={imageAlt}
            class="w-full h-[300px] object-cover block"
          />
        </div>
      </div>

      <!-- Tekstindhold (flex-grow for at skubbe footer til bund) -->
      <div class="pt-4 pl-0 flex-1">
        <Heading htmlheading="h2" size="small">{name}</Heading>

        <p class="text-sm text-primaryblue100 font-semibold mb-2">{role}</p>

        <p class="text-sm text-primaryblue100 leading-relaxed">
          {bio}
        </p>
      </div>

      <!-- footer: email venstre og linkedin ikon højre -->
      <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center">
          <a
            href={`mailto:${email}`}
            class="flex items-center no-underline text-primaryblue100 text-sm"
          >
            <img src="/mail.svg" alt="mail icon" class="h-6 w-6" />
            <span class="underline pl-2 text-sm">{email}</span>
          </a>
        </div>

        <div>
          <a
            href={linkedin}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Linkedin profil"
          >
            <img src="/linkedin.svg" alt="Linkedin icon" class="h-6 w-6" />
          </a>
        </div>
      </div>
    </div>
  </div>
</a>
