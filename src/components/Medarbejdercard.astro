---
const { image = "", name = "", role = "", bio = "", email = "" } = Astro.props;
import Heading from "../components/Heading.astro";
---

<a
  href={`mailto:${email}`}
  class="relative block h-full w-full max-w-[360px] mx-auto
         hover:scale-[1.02] transition-transform duration-300
         focus:outline-none focus:ring-2 focus:ring-orange60 rounded-2xl"
>
  <div
    class="flex h-full flex-col rounded-2xl border-2 border-orange60
           bg-beige p-4 relative overflow-hidden cursor-pointer"
  >
    <!-- Billede -->
    <div class="w-full flex justify-center">
      <div class="w-full max-w-[300px] rounded-lg border-2 border-orange60">
        <img
          src={image}
          alt={name}
          class="w-full h-[300px] object-cover rounded-lg block"
        />
      </div>
    </div>

    <!-- Tekst -->
    <div class="pt-4 pl-2 flex flex-col flex-grow">
      <Heading htmlheading="h2" size="small">{name}</Heading>

      <p class="text-sm text-primaryblue100 font-semibold mb-2">
        {role}
      </p>

      <!-- Bio fylder forskellen -->
      <p class="text-sm text-primaryblue100 leading-relaxed flex-grow">
        {bio}
      </p>
    </div>

    <!-- Email (samme placering i alle cards) -->
    <div class="mt-4 flex items-center gap-3 text-sm text-primaryblue100 pl-2">
      <img src="/mail.svg" alt="" class="h-7 w-7 shrink-0" />
      <p class="text-sm text-primaryblue100 mb-2">
        {email}
      </p>
    </div>
  </div>
</a>
