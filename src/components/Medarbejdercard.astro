---
// MedarbejderCard.astro
const {
  url = "/singleview",
  image = "",
  name = "",
  role = "",
  bio = "",
  email = "",
  linkedin = "#",
} = Astro.props;
import Heading from "../components/Heading.astro";
---

<a
  href={url}
  class="block w-full no-underline text-inherit"
  aria-label={`GÃ¥ til ${name}`}
>
  <div
    class="relative w-full max-w-[360px] mx-auto hover:scale-[1.02] transition-transform duration-300"
  >
    <!-- Udenom card -->
    <div
      class="rounded-2xl border-2 border-orange60 bg-beige p-4 gap-4 relative overflow-hidden"
    >
      <!-- Billede -->
      <div class="w-full flex justify-center">
        <div class="w-full max-w-[300px] rounded-lg border-2 border-orange60">
          <img
            src={image}
            class="w-full h-[300px] object-cover rounded-lg block"
          />
        </div>
      </div>

      <!-- Tekstindhold -->
      <div class="pt-4 pl-2">
        <Heading htmlheading="h2" size="small">{name}</Heading>

        <p class="text-sm text-primaryblue100 font-semibold mb-2">{role}</p>

        <p class="text-sm text-primaryblue100 leading-relaxed">
          {bio}
        </p>
      </div>

      <!-- Email -->
      <div class="mt-4 w-full overflow-visible">
        <a
          href={`mailto:${email}`}
          class="flex items-center gap-3 text-sm text-primaryblue"
        >
          <img src="/mail.svg" alt="Mail icon" class="h-7 w-7 shrink-0" />
          <span class="whitespace-nowrap">
            {email}
          </span>
        </a>
      </div>
    </div>
  </div>
</a>
