---
// Button.astro
const { variant = "primary", size = "large" } = Astro.props;

const buttonStyling = "btn my-2  border-2 shadow-none rounded-xl";

const variantClasses = {
  primary: "px-7 py-2 bg-primaryblue60 text-white  border-primaryblue100",
  secondary: "px-7 py-2 bg-orange60 text-primaryblue100 border-orange100",
};
const sizeClasses = {
  large: "px-13 p-6",
  medium: "p-4",
  small: "p-2",
};
---

<!-- Husk at importere CSS hvis nÃ¸dvendigt -->
<button
  class="cursor cursor-(--handcursor)"
  class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></button
>
