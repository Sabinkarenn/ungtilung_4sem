---
const {
  url = "/singleview",
  cardimage = "",
  cardimagealt = "",
  category = "",
  categoryColor = "bg-primaryblue60",
  date = "",
  author = "",
  cardtitle = "",
} = Astro.props;
---

<a href={url} class="block w-full no-underline text-inherit">
  <div
    class="relative w-full max-w-[360px] mx-auto hover:scale-[1.02] transition-transform duration-300"
  >
    <!-- Outer card -->
    <div
      class="rounded-[22px] border-2 border-orange100 bg-beige p-4 flex flex-col gap-4"
    >
      <!-- Category tag -->
      <div class="flex">
        <span
          class={`px-3 py-1 rounded-full text-white text-sm font-medium ${categoryColor}`}
        >
          {category}
        </span>
      </div>

      <!-- Image -->
      <figure class="relative w-full">
        <img
          src={`/${cardimage}`}
          alt={cardimagealt}
          class="w-full h-56 object-cover rounded-[16px] border-2 border-orange100"
        />
      </figure>

      <!-- Text content -->
      <div class="flex flex-col gap-2">
        <!-- Meta info -->
        <p class="text-sm text-primaryblue80">
          {date} // {author}
        </p>

        <!-- Title -->
        <h3 class="text-xl text-primaryblue100 font-semibold leading-snug">
          {cardtitle}
        </h3>
      </div>

      <!-- CTA -->
      <div class="pt-2">
        <button
          class="bg-orange60 text-beige text-sm rounded-full py-2 px-6 border border-orange100 hover:brightness-95 transition"
        >
          Se mere
        </button>
      </div>
    </div>
  </div>
</a>
