---
const {
  cardimage = "",
  cardimagealt = "",
  category = "",
  categoryColor = "bg-primaryblue60",
  date = "",
  author = "",
  cardtitle = "",
  cardtext = "",
} = Astro.props;
import Button from "../components/Button.astro";
import Heading from "../components/Heading.astro";
---

<div
  class="relative w-full max-w-[360px] mx-auto hover:scale-[1.02] transition-transform duration-300"
>
  <!-- Outer card -->
  <div
    class="rounded-2xl border-2 border-orange60 bg-beige p-4 flex flex-col gap-4"
  >
    <!-- Category tag -->
    <div class="flex">
      <span
        class={`px-3 py-1 mb-3 rounded-full text-white text-sm font-medium ${categoryColor}`}
      >
        {category}
      </span>
    </div>

    <!-- Image -->
    <figure class="relative w-full">
      <img
        src={`/${cardimage}`}
        alt={cardimagealt}
        class="w-full h-56 object-cover rounded-[16px] border-2 border-orange60"
      />
    </figure>

    <!-- Text content -->
    <div class="mt-3 flex flex-col justify-start items-start text-left">
      <!--  info -->
      <p class="text-sm">
        {date} // {author}
      </p>

      <!-- Title -->
      <div>
        <Heading htmlheading="h2" size="small">
          {cardtitle}
        </Heading>
      </div>

      <!--  card text -->
      <p class="text-sm">
        {cardtext}
      </p>
    </div>

    <!-- CTA -->
    <div class="pt-2 flex justify-start">
      <Button href="#ungtilung" variant="secondary" size="small">
        LÃ¦s mere
      </Button>
    </div>
  </div>
</div>
