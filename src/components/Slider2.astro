<section class="max-w-4xl mx-auto px-6 py-8">
  <div id="testimonial-slider" class="relative">
    <!-- Slide wrapper -->
    <div class="overflow-hidden">
      <!-- Slides -->
      <div class="slide" data-index="0">
        <blockquote
          class="bg-beige border-2 border-primaryblue100 rounded-xl p-8 text-center text-orange60 text-lg md:text-xl"
        >
          “Jeg blev mere optimistisk på fremtiden og næste skridt”
          <div class="mt-4 text-primaryblue100 font-semibold">– Anonym ung</div>
        </blockquote>
      </div>

      <div class="slide hidden" data-index="1">
        <blockquote
          class="bg-beige border-2 border-primaryblue100 rounded-xl p-8 text-center text-orange60 text-lg md:text-xl"
        >
          “Det var rart at tale med nogen, der forstod mig”
          <div class="mt-4 text-primaryblue100 font-semibold">– Anonym ung</div>
        </blockquote>
      </div>

      <div class="slide hidden" data-index="2">
        <blockquote
          class="bg-beige border-2 border-primaryblue100 rounded-xl p-8 text-center text-orange60 text-lg md:text-xl"
        >
          “Jeg fik gode værktøjer til mine næste skridt”
          <div class="mt-4 text-primaryblue100 font-semibold">– Anonym ung</div>
        </blockquote>
      </div>
    </div>

    <!-- Arrow controls -->
    <div class="flex items-center justify-center gap-6 mt-6">
      <button
        id="prevBtn"
        class="w-10 h-10 rounded-full border-2 border-primaryblue100 flex items-center justify-center text-primaryblue100"
      >
        ←
      </button>

      <button
        id="nextBtn"
        class="w-10 h-10 rounded-full border-2 border-primaryblue100 flex items-center justify-center text-primaryblue100"
      >
        →
      </button>
    </div>

    <!-- Dot indicators -->
    <div id="dots" class="flex items-center justify-center gap-3 mt-4">
      <button class="dot w-3 h-3 rounded-full border-2 border-primaryblue100"
      ></button>
      <button class="dot w-3 h-3 rounded-full border-2 border-primaryblue100"
      ></button>
      <button class="dot w-3 h-3 rounded-full border-2 border-primaryblue100"
      ></button>
    </div>
  </div>
</section>

<script>
  (function () {
    const slides = [...document.querySelectorAll("#testimonial-slider .slide")];
    const dots = [...document.querySelectorAll("#dots .dot")];
    const prev = document.getElementById("prevBtn");
    const next = document.getElementById("nextBtn");

    let index = 0;

    function show(i) {
      index = (i + slides.length) % slides.length;

      // Slides
      slides.forEach((slide, idx) => {
        slide.classList.toggle("hidden", idx !== index);
      });

      // Dots
      dots.forEach((dot, idx) => {
        if (idx === index) {
          dot.classList.add("bg-primaryblue100");
        } else {
          dot.classList.remove("bg-primaryblue100");
        }
      });
    }

    // Dot click
    dots.forEach((dot, idx) => {
      dot.addEventListener("click", () => show(idx));
    });

    prev.addEventListener("click", () => show(index - 1));
    next.addEventListener("click", () => show(index + 1));

    // Arrow keys
    document.addEventListener("keydown", (e) => {
      if (e.key === "ArrowLeft") show(index - 1);
      if (e.key === "ArrowRight") show(index + 1);
    });

    // Initialize
    show(0);
  })();
</script>
