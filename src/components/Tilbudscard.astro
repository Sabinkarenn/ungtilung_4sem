---
const { url = "/", bg = "", icon = "", iconalt = "", title = "" } = Astro.props;
const imgSrc = icon ? `/${icon.replace(/^\/+/, "")}` : null;
---

<a href={url} class="block no-underline text-inherit">
  <div
    class="relative mx-auto w-[250px] h-[400px]
           transition-transform duration-300 hover:scale-105"
  >
    <div class={`flex h-full flex-col rounded-2xl p-6 ${bg}`}>
      <!-- Spacer top (kontrolleret) -->
      <div class="flex-1"></div>

      <!-- Mid content -->
      <div class="flex flex-1 items-center justify-center">
        {
          imgSrc ? (
            <img
              src={imgSrc}
              alt={iconalt || title}
              class="max-w-[160px] w-full h-auto object-contain"
            />
          ) : (
            <div class="flex h-[120px] w-full max-w-[160px] items-center justify-center rounded-md text-sm text-gray-500">
              Ingen illustration
            </div>
          )
        }
      </div>

      <!-- Titel -->
      <p class="mt-4 text-center text-xl tracking-wide text-white">
        {title}
      </p>
    </div>
  </div>
</a>
