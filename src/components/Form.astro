---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Heading from "./Heading.astro";
---

<section>
  <div>
    <div class="ml-25 max-w-2xl mx-auto px-4">
      <Heading htmlheading="h3" size="medium">
        Er der noget du ikke har fået svar på? Skriv til vores brevkasse!
      </Heading>
    </div>

    <div class="max-w-md mx-auto">
      <div class="formstart">
        <!-- navn sektion start -->
        <section>
          <div>
            <label>
              <span>Navn</span><br />
              <input
                type="text"
                class="w-full border-2 border-primaryblue100 rounded-lg focus:border-orange focus:ring focus:ring-brightorange focus:ring-opacity-50"
                placeholder="Navn"
              />
            </label>
          </div>
        </section>
        <!-- navn sektion slut -->

        <!-- email sektion start -->
        <section>
          <div>
            <label>
              <span class="mb-2">E-mail</span><br />
              <input
                type="email"
                class="w-full rounded-lg border-2 border-primaryblue100 focus:border-orange focus:ring focus:ring-brightorange focus:ring-opacity-50"
                placeholder="Email"
              />
            </label>
          </div>
        </section>
        <!-- email sektion slut -->

        <!-- udfyld sektion start -->
        <section>
          <div>
            <label>
              <span class="mb-2">Udfyldningsblanket</span><br />
              <textarea
                class="w-full rounded-lg border-2 border-primaryblue100 focus:border-primaryblue100 focus:ring focus:ring-primaryblue40 focus:ring-opacity-50"
                placeholder="Skriv tekst her"
                rows="8"></textarea>
            </label>
          </div>
        </section>
        <!-- udfyld sektion slut -->

        <form>
          <input type="radio" id="html" name="fav_language" value="HTML" />
          <label for="html" class="text-primaryblue100"
            >Jeg accepterer UngTilUngs persondatapolitik</label
          ><br />
        </form>

        <form id="volunteerForm">
          <div class="flex items-center justify-center m-2">
            <div class="mt-4">
              <Button id="openPopup" variant="secondary" size="medium">
                Send til brevkassen
              </Button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
