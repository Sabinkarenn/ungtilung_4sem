---
// Henter parametrene fra Astro.props
const { htmlheading = "h1", size = "large", stylingclasses = "" } = Astro.props;

const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  xlarge: "text-5xl lg:text-8xl  font-Crete Round mb-8 text-primaryblue60",
  large: "text-3xl text-orange60 lg:text-4xl  mb-10 ",
  medium: "text-2xl text-primaryblue60 lg:text-3xl  ",
  small: "text-lg lg:text-xl  mb-2 ",
  xsmall: "text-lg lg:text-xl font-semibold  ",
};
---

<Htmlheading class:list={[sizeClasses[size], stylingclasses]}
  ><slot /></Htmlheading
>
