---
// Henter parametrene fra Astro.props
const { htmlheading = "h1", size = "large", stylingclasses = "" } = Astro.props;

const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  xlarge: "text-3xl lg:text-6xl font-Bommerslap mb-8 text-primaryblue60",
  large: "text-3xl text-orange60 lg:text-4xl font-bold mb-10 ",
  medium: "text-2xl text-primaryblue60 lg:text-3xl font-bold ",
  small: "text-lg lg:text-xl font-semibold mb-4 ",
  xsmall: "text-lg lg:text-xl font-semibold  ",
};
---

<Htmlheading class:list={[sizeClasses[size], stylingclasses]}
  ><slot /></Htmlheading
>
